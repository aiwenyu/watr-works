
pdfName=$1
outputDir=$2

fontsInFile=FontsInFile(pdfName)

fontCount = SizeOf(fontsInFile)


i=0
while(i<fontCount)
   fname = fontsInFile[i]
   pdfFontName = pdfName+"("+fname+")"
   sdfOutputFile="font-"+i+".sdf"

   Print(pdfFontName)
   Open(pdfFontName)

   Save(outputDir +"/"+ sdfOutputFile)

   ++i
endloop
